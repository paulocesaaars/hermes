FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

RUN apt-get update
ENV TZ=America/Sao_Paulo

RUN apt-get update && apt-get install -y apt-utils
RUN apt-get install -y libfontconfig1
RUN apt-get install -y libgdiplus
RUN apt-get install -y libc6-dev 
RUN ln -s /usr/lib/libgdiplus.so/usr/lib/gdiplus.dll

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /backend
COPY ["backend/Deviot.Hermes.Api/Deviot.Hermes.Api.csproj", "backend/Deviot.Hermes.Api/"]
COPY ["backend/Deviot.Hermes.Application/Deviot.Hermes.Application.csproj", "backend/Deviot.Hermes.Application/"]
COPY ["backend/Deviot.Hermes.Infra.Modbus/Deviot.Hermes.Infra.Modbus.csproj", "backend/Deviot.Hermes.Infra.Modbus/"]
COPY ["backend/Deviot.Hermes.Domain/Deviot.Hermes.Domain.csproj", "backend/Deviot.Hermes.Domain/"]
COPY ["backend/Deviot.Hermes.Infra.SQLite/Deviot.Hermes.Infra.SQLite.csproj", "backend/Deviot.Hermes.Infra.SQLite/"]
RUN dotnet restore "backend/Deviot.Hermes.Api/Deviot.Hermes.Api.csproj"
COPY . .
WORKDIR "/backend/backend/Deviot.Hermes.Api"
RUN dotnet build "Deviot.Hermes.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Deviot.Hermes.Api.csproj" -c Release -o /app/publish

# Change timezone to local time
ENV TZ=America/Sao_Paulo
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Deviot.Hermes.Api.dll"]